<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/payment_information_label"
        android:textSize="18dp"
        android:editable="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/payment_information_value"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:background="@null"
        android:drawableLeft="@drawable/ic_photo_camera_black_48dp"
        android:gravity="center"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="Scan Your Credit Card"
        android:id="@+id/scanYourCardButton" />
</LinearLayout>